<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background1"
    android:orientation="vertical"
    android:paddingTop="10dp"
    tools:context=".Settings_Activity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_btn_back_to_settings"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="start|center_vertical"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/tv_settings_label"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/profile_login_title"
            android:textColor="@color/almostBlack"
            android:textSize="23sp"
            android:textStyle="bold" />

    </FrameLayout>

    <EditText
        android:id="@+id/et_login"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:autofillHints=""
        android:background="@drawable/style_edit_text"
        android:hint="@string/login"
        android:inputType="text"
        android:paddingStart="10dp"
        android:textSize="16sp"
        tools:ignore="RtlSymmetry" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/style_edit_text"
        android:hint="@string/password"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:textSize="16sp"
        tools:ignore="RtlSymmetry" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        tools:ignore="RtlSymmetry">

        <Button
            android:id="@+id/btn_log_in"
            android:layout_width="75dp"
            android:layout_height="35dp"
            android:layout_marginStart="6dp"
            android:background="@drawable/style_edit_text"
            android:text="@string/sign_in_button_text"
            android:textStyle="normal" />

        <Button
            android:id="@+id/btn_registration"
            android:layout_width="205dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/style_edit_text"
            android:text="@string/register_button_text" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="или"
        android:textSize="18sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_facebook"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="15dp"
            android:src="@drawable/icon_facebook" />

        <ImageView
            android:id="@+id/icon_vkontakte"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="22dp"
            android:src="@drawable/icon_vk" />

        <ImageView
            android:id="@+id/icon_google_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/icon_google_plus" />


    </LinearLayout>

</LinearLayout>